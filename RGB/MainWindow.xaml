        mc:Ignorable="d"
        Title="Выбор цвета" 
        Height="450" 
        Width="800" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" 
        WindowStyle="ToolWindow" Margin="0,0,0,0" BorderBrush="White" KeyUp="RGBSetup_KeyUp" >
