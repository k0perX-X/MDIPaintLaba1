                <Grid Margin="0,10,0,0">
                    <RadioButton x:Name="decRadioButton" GroupName="NumberStyle" Content="Dec" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" IsChecked="True" Checked="decRadioButton_Checked"/>
                    <RadioButton x:Name="hexRadioButton" GroupName="NumberStyle" Content="Hex" HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Center" Checked="hexRadioButton_Checked"/>
                </Grid>
                <Button x:Name="saveButton" Content="Выбрать цвет" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Click="saveButton_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Rectangle x:Name="rectangle" HorizontalAlignment="Left" Height="104" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="110" Fill="Black"/>
