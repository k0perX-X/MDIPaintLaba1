                <local:ColorSetter x:Name="greenColorSetter" Title="Зеленый" TextBoxLostFocus="textBox_LostFocus" />
                <local:ColorSetter x:Name="blueColorSetter" Title="Синий" TextBoxLostFocus="textBox_LostFocus" />
