<UserControl x:Class="RGB.ColorSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RGB"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Label Content="{Binding Title}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="ColorTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="57"  LostFocus="textBox_LostFocus">
                <TextBox.Margin>
                    <Thickness>
                        <Thickness.Top>4</Thickness.Top>
                    </Thickness>
                </TextBox.Margin>
                <TextBox.Tag>
                    <system:Byte>0</system:Byte>
                </TextBox.Tag>
            </TextBox>
        </Grid>
    </Grid>
</UserControl>